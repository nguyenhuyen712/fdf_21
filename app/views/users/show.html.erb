<% provide :title, t("users.show.title") %>
<h1><%= t "users.show.title" %></h1>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-info">
      <div class="panel-heading text-center"><%= t "user_infomation" %></div>
      <%= render "user" %>
    </div>
    <% if @user.current_user? current_user %>
      <div class="margin-bottom-10">
        <%= link_to t(".edit_user"), edit_user_path(@user),
          class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-8 order-history">
    <div class="title text-center"><%= t "order-history" %></div>
    <table class="table table-hover table-responsive table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t ".order_time" %></th>
          <th><%= t ".receiver"%></th>
          <th><%= t ".receiver_address"%></th>
          <th><%= t ".receiver_phone" %></th>
          <th><%= t ".delivery_time" %></th>
          <th><%= t ".status" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>
    <div class="col-md-8 text-center">
      <%= will_paginate @orders %>
    </div>
  </div>
</div>
