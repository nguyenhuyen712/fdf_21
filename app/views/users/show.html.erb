<% provide :title, t("users.show.title") %>
<h1><%= t "users.show.title" %></h1>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-info">
      <div class="panel-heading text-center">User infomation</div>
      <%= render "user" %>
    </div>
    <% if @user.current_user? current_user %>
      <div class="margin-bottom-10">
        <%= link_to t(".edit_user"), edit_user_path(@user),
          class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
