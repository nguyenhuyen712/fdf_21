<header class="navbar navbar-fixed-top navbar-inverse navbar-customer">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
        data-target="#navbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("f_logo.png", alt: t("layouts.header.logo_alt")),
        root_path, id: "logo" %>
    </div>
    <nav class="collapse navbar-collapse" id="navbar">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("layouts.header.products"), products_path %></li>
        <li><%= link_to t("layouts.header.product_suggests"),
          new_product_suggest_path %></li>
        <li><%= link_to t("static_pages.help.title"),
          "/static_pages/help" %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "layouts.header.account" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("layouts.header.profile"),
              user_path(current_user) %></li>
            <li><%= link_to t("layouts.header.setting"),
              edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("layouts.header.logout"), logout_path,
                method: "delete" %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
