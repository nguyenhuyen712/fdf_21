<%= form_for @supports.cart_item, url: cart_path(@product),
  html: {remote: true, class: "form-inline", method: :patch} do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.number_field :quantity, value: params[:quantity],
    class: "form-control", min: Settings.orders.min_quantity,
    placeholder: t(".enter_a_number"), required: :required %>
  <%= f.button name: :service_type, value: :add, type: :submit,
    class: "btn-primary form-control" do %>
    <%= t ".add_to_cart" %>
  <% end %>
<% end %>
