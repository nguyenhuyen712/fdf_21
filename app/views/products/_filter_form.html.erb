<%= form_tag products_path, method: :get, remote: true do %>
  <div class="row">
    <div class="form-group col-md-2 col-sm-6">
      <%= label_tag t(".classify") %>
      <%= select_tag :classify, options_for_select(@supports.classifies,
        params[:classify]), class: "form-control", include_blank: t(".select_all"),
        id: "classify_filter", data: {url: products_path(:json)} %>
    </div>
    <div class="form-group col-md-3 col-sm-6">
      <%= label_tag t(".category") %>
      <%= select_tag :category_id,
        options_from_collection_for_select(@supports.categories, :id, :name,
        params[:category_id]), class: "form-control",
        include_blank: t(".select_all"), id: "category_id_filter" %>
    </div>
    <div class="form-group col-md-5 col-sm-6">
      <%= label_tag t(".price") %>
      <div class="row">
        <div class="col-md-4">
          <%= select_tag :order_price, options_for_select(@supports.sortings,
            params[:order_price]), include_blank: t(".sorting"), class: "form-control"%>
        </div>
        <div class="col-md-4">
          <%= text_field_tag :from_price, params[:from_price],
            class: "form-control", placeholder: t(".from") %>
        </div>
        <div class="col-md-4">
          <%= text_field_tag :to_price, params[:to_price],
            class: "form-control", placeholder: t(".to") %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= text_field_tag :name, params[:name],
            class: "form-control", placeholder: t(".enter_name") %>
        </div>
        <div class="col-md-4">
          <%= select_tag :order_name, options_for_select(@supports.sortings,
            params[:order_name]), include_blank: t(".sorting"), class: "form-control"%>
        </div>
      </div>
    </div>
    <div class="form-group col-md-2 col-sm-6">
      <%= label_tag t(".rating") %>
      <%= select_tag :rating, options_for_select(@supports.sortings,
        params[:rating]), class: "form-control"%>
      <%= submit_tag t(".filter"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
