<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="row margin-bottom-10">
  <div class="col-md-6 pull-right">
    <%= render "search_form" %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-responsive table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t ".orderer" %></th>
          <th><%= t ".order_time" %></th>
          <th><%= t ".receiver"%></th>
          <th><%= t ".receiver_phone" %></th>
          <th><%= t ".delivery_time" %></th>
          <th><%= t ".status" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>
  </div>
  <div class="col-md-12 text-center">
    <%= will_paginate %>
  </div>
</div>
