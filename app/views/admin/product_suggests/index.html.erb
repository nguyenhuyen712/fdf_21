<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-responsive table-striped
      table-bordered table-products">
      <thead>
        <tr>
          <th><%= t ".name" %></th>
          <th><%= t ".description" %></th>
          <th><%= t ".user_suggest" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @product_suggests %>
      </tbody>
    </table>
  </div>
  <div class="col-md-12 text-center">
    <%= will_paginate %>
  </div>
</div>
